{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/conversations.css') }}">
{% endblock %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container">
        {% if conversations %}
            <h2>Vos conversations</h2>
                <div class="liste_conversation">
                    {% for conversation in conversations %}
                        {% if conversation %}
                            <a href="{{ path('app_conversation_chat', {id: conversation.id}) }}">
                                <div class="conversation">
                                    {% if app.user == conversation.participant1 %}
                                        {% if conversation.dernierMessage %}
                                                <b class="titre_conversation">{{ conversation.participant2.PrenomCompte }} - {{ conversation.dernierMessage.date|date("H:i d/m") }}</b>

                                            {% if app.user != conversation.dernierMessage.expeditaire and not conversation.dernierMessage.lu %}
                                                <p class="msg nonlu">{{ conversation.dernierMessage.message }}</p>
                                            {% else %}
                                                <p class="msg">{{ conversation.dernierMessage.message }}</p>
                                            {% endif %}
                                        {% else %}
                                            <b class="titre_conversation">{{ conversation.participant2.PrenomCompte }}</b>
                                        {% endif %}
                                    {% else %}
                                        <b class="titre_conversation">{{ conversation.participant1.PrenomCompte }}</b>
                                        {% if conversation.dernierMessage %}
                                            {% if app.user != conversation.dernierMessage.expeditaire and not conversation.dernierMessage.lu %}
                                                <p class="msg nonlu">{{ conversation.dernierMessage.message }}</p>
                                            {% else %}
                                                <p class="msg">{{ conversation.dernierMessage.message }}</p>
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
        {% else %}
            <div>
                <div class="alert alert-danger text-center">Aucune conversion trouv√©e.</div>
            </div>
        {% endif %}
    </div>
{% endblock %}