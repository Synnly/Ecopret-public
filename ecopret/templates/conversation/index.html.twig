{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container">
        {% if app.user %}
            <div class="mb-3">
                Bonjour {{ app.user.PrenomCompte }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        {% if conversations %}
            <h2>Vos conversations :</h2>
            <table class="table table-striped">
                <tbody>
                    {% for conversation in conversations %}
                        {% if conversation %}
                            <tr class="">
                                <th>
                                    <span>{{ conversation.id }}</span>
                                    <a class="btn btn-primary float-right" href="{{ path('app_conversation_chat', {id: conversation.id}) }}">Contacter</a>
                                </th>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>
                <div class="alert alert-danger text-center">Aucune conversion trouv√©e.</div>
            </div>
        {% endif %}
    </div>
{% endblock %}