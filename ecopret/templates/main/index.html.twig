						<h3 class="card__title" id="titreAnnonce">
							{{ annonce.getNomAnnonce }}
						</h3>
						<div class="card__content_img">
							<img class="annonce_image" src="{{ '/picturesAnnouncement/' ~ annonce.getImageAnnonce|split('|')[0] }}" alt="#" width="150" height="150">
						</div>
						<div class="card__content">
							<p id="descAnnonce">{{ annonce.getDescription }}</p>
						</div>
						<div class="card__content">
							Prix :
							<p id="price_annonce">{{ annonce.getPrix }}</p>
						</div>

						<div class="card__btn">
							<a href="./main/choisir/{{ annonce.getId }}" class="annonce-btn">Choisir</a>
						</div>
					</div>
				{% endfor %}
