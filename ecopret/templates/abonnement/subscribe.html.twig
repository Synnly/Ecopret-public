{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/abonnement.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/controllers/abonnement/abonnement.js') }}"></script>
{% endblock %}


{% block body %}
<div class="title">
    <h3>Notre abonnement</h3>
</div>
<div class="describe">
    <label>Nous vous proposons un abonnement mensuel vous permettant d'acquérir mensuellement des florains.</label>
</div>
<main class="page-content">
    <div class="card">
        <div class="content">
            <h2 class="title">PREMIUM</h2>
            <p class="copy">50€/mois → 1000 florains/mois</p>
            <button class="btn" onclick="goToPayment()">Souscrire</button>
        </div>
    </div>
    <button class="home">
        <i class="fas fa-home"></i> Retour
    </button>
</main>


{% endblock %}