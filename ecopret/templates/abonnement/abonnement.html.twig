{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/abonnement.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/controllers/abonnement/abonnement.js') }}"></script>
{% endblock %}


{% block body %}
<div class="title">
    <h3>Votre abonnement</h3>
</div>
<div class="describe">
    <label>Vous avez suscrit à un abonnement vous permettant d'acquérir mensuellement des florains.</label>
</div>
<main class="page-content">
    <div class="card">
        <div class="content">
            <h2 class="title">PREMIUM</h2>
            <p class="copy">50€/mois → 1000 florains/mois</p>
            {{ form_start(form) }}
            <button class="btn" type="submit">Désabonner</button>
            {{ form_end(form) }}
        </div>
    </div>
</main>


{% endblock %}