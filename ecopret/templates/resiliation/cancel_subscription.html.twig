{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/resiliation.css') }}">
{% endblock %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
